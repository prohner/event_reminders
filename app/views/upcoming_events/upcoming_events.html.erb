<h1>Upcoming Events</h1>

<table class="events-list">
	<tr>
		<th>Contact</th>
		<th>Occasion</th>
		<th>Date</th>
		<th>Years</th>
	</tr>
	
	<% unless @events.nil? %>
		<% @events.each do |event| %>
		<tr>
			<td class="event-data"><%= link_to event.person.full_name, event.person %></td>
			<td class="event-data"><%= link_to event.description, event %></td>
			<td class="event-data"><%= event.event_date.strftime("%m/%d/%Y") %></td>
			<td class="event-data"><%= event.years_at_next_occurrence_of_event %> years</td>
		</tr>
		<% end %>
	<% end %>

</table>
